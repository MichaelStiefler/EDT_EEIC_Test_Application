<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llSwitchEeicPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/llSwitchGpioInOut1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Switch
            android:id="@+id/switchRndOutputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RND Output OFF "
            android:visibility="invisible"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/switchRndOutputsOn"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="ON"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <Switch
            android:id="@+id/switchEeicPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power  OFF "
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="ON"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwitchGpioInOut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/llSwitchGpioInOut2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchEeicPower">

        <Switch
            android:id="@+id/switchGpioHighLow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Output  Low "
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHigh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHighLow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="High"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchGpioInOut1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO 1  IN " />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwitchGpioInOut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/llSwitchGpioInOut3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchGpioInOut1">

        <Switch
            android:id="@+id/switchGpioHighLow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Output  Low "
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHigh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHighLow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="High"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchGpioInOut2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO 2  IN " />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwitchGpioInOut3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/llSwitchGpioInOut4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchGpioInOut2">

        <Switch
            android:id="@+id/switchGpioHighLow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Output  Low "
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHigh3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHighLow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="High"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchGpioInOut3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO 3  IN " />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwitchGpioInOut4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/llSwitchGpioInOut5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchGpioInOut3">

        <Switch
            android:id="@+id/switchGpioHighLow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Output  Low "
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHigh4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHighLow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="High"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchGpioInOut4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO 4  IN " />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwitchGpioInOut5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonSendSerialTestData"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchGpioInOut4">

        <Switch
            android:id="@+id/switchGpioHighLow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Output  Low "
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHigh5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewGpioHighLow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="High"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchGpioInOut5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO 5  IN " />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSendSerialTestData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:text="Send Serial Test Data"
        app:layout_constraintBottom_toTopOf="@+id/listViewLog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSwitchGpioInOut5" />

    <ListView
        android:id="@+id/listViewLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSendSerialTestData"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>